<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:background="@drawable/banana" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="@drawable/coconut" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ponkam"/>

            <ImageView
                android:layout_width="87dp"
                android:layout_height="89dp"
                android:background="@drawable/grape" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="94dp"
                android:background="@drawable/strawberry" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:background="@drawable/pineapple" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mango"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/pear" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:background="@drawable/watermelon" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="31dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.Description: Banana \n2. Calories: \n3.Potassium:\n4.Calcium:\n5. Vitamin A:"
                android:textSize="14dp"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="\n1.Description:Coconut\n2.Calories:\n3.Calcium:\n4.VitaminaA:"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="0dp" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
