<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:background="@drawable/banana" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:background="@drawable/coconut" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ponkam"/>

            <ImageView
                android:layout_width="87dp"
                android:layout_height="89dp"
                android:background="@drawable/grape" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="94dp"
                android:background="@drawable/strawberry" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:background="@drawable/pineapple" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mango"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/pear" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:background="@drawable/watermelon" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="31dp">


            <TextView
                android:id="@+id/BananaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.Description: Banana \n2. Calories: \n3.Proteins:\n4.Sodium:\n5. Potassium:"
                android:textSize="14dp"
                android:paddingTop="12dp"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/CoconutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="1.Description: Coconut \n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"
                android:textSize="14dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/PonkamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="1.Description: Ponkam\n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"/>

            <TextView
                android:id="@+id/GrapeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="1.Description: Grape\n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"/>

            <TextView
                android:id="@+id/StrawberryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="1.Description:Coconut\n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"/>

            <TextView
                android:id="@+id/PineappleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="1.Description: Pineapple\n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"/>

            <TextView
                android:id="@+id/MangoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="1.Description: Mango\n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"/>

            <TextView
                android:id="@+id/PearText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingLeft="10dp"
                android:text="1.Description: Pear\n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"/>

            <TextView
                android:id="@+id/WatermelonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingLeft="10dp"
                android:text="1.Description:Watermelon\n2.Calories:\n3.Proteins:\n4.Sodium:\n5. Potassium:"/>








        </LinearLayout>

    </LinearLayout>
</ScrollView>
